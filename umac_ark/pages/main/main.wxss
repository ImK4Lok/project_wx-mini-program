/* pages/main/main.wxss */
.navbar-select {
  padding-top: 10px;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

.select-button {
  align-items: left;
}

.select-ym {
  width: 70%;
  margin-top: 20rpx;
  padding-left: 0rpx;
  background-color: #6D89D2;
  color: white;
  border-radius: 20rpx;
  font-weight: bold;
}

.select-ym:active {
  background-color: #647AB4;
}

.original-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.selectWindow {
  width: 94%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding:20rpx 3%;
  border-radius: 20px 20px 0 0;
}

.column {
  display: flex;
  margin: 10rpx;
  flex-direction: column;
}

.row_year text{
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  float:left;
  background:#f2f2f2;
  text-align: center;
  margin:20rpx 0 0 26rpx;
  font-size:12px;
  border-radius: 5px;
}

.row_year text:active {
  color:#fff;
  background:#5E7D8E;
}

.row_year .selected-view {
  color:#fff;
  background:#5E7D8E;
}

.row_major text{
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  float:left;
  background:#f2f2f2;
  text-align: center;
  margin:20rpx 0 0 26rpx;
  font-size:12px;
  border-radius: 5px;
}

.row_major text:active {
  color:#fff;
  background:#5E7D8E;
}

.row_major .selected-view {
  color:#fff;
  background:#5E7D8E;
}

.select-font {
  margin: 20rpx;
  font-weight: bold;
  font-size: 20px;
  color: black;
  height: 26px;
  line-height: 26px;
}

.line-divider {
  margin: 15px auto 5px auto;
  width: 95%;
  display: flex;
  border-top: 2px solid #bbb;
  background-color: #f2f2f2;
  justify-content: center;
}

.decisionBtn {
  display: flex;
  flex-direction: row;
}

.btn {
  width:400rpx;
  height:100rpx;
  line-height:100rpx;
  float:left;
  text-align: center;
  margin:20rpx 0 0 0;
  font-size:25px;
  border-radius: 5px;
}

.confirm {
  background:#BFFFD4;
  text-align: center;
}

.confirm:active {
  background: #D6FFE5;
}